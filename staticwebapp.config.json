{
  "routes": [
    { "route": "/api/*", "allowedRoles": ["anonymous"] },
    { "route": "/t/*", "rewrite": "/index.html" },
    { "route": "/", "rewrite": "/index.html" },
    { "route": "/assets/*", "allowedRoles": ["anonymous"] },
    { "route": "/*.{js,css,ico,png,svg,webp,txt,json,wasm}", "allowedRoles": ["anonymous"] },
    { "route": "/*", "rewrite": "/index.html" }
  ],
  "responseOverrides": {
    "404": { "rewrite": "/index.html", "statusCode": 200 }
  },
  "globalHeaders": {
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  }
}
