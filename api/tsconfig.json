{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",            // Use CommonJS for Functions host compatibility
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": ".",                   // Emit JS next to source (code-first model acceptable)
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.function.json", "**/function.json"]
}